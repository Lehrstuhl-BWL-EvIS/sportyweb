<.header>
  Club <%= @club.id %>
  <:subtitle>This is a club record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/clubs/#{@club}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit club</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name"><%= @club.name %></:item>
  <:item title="Reference number"><%= @club.reference_number %></:item>
  <:item title="Website url"><%= @club.website_url %></:item>
  <:item title="Founded at"><%= Calendar.strftime(@club.founded_at, "%d.%m.%Y") %></:item>
</.list>

<h2 class="text-lg font-semibold leading-8 text-zinc-800 mt-20 mb-3">
  Departments
</h2>

<%= if Enum.any?(@club.departments) do %>
  <.table id="departments" rows={@club.departments} row_click={&JS.navigate(~p"/departments/#{&1}")}>
    <:col :let={department} label="Name"><%= department.name %></:col>
    <:action :let={department}>
      <.link patch={~p"/departments/#{department}/edit"}>Edit</.link>
    </:action>
    <:action :let={department}>
      <.link phx-click={JS.push("delete", value: %{id: department.id})} data-confirm="Are you sure?">
        Delete
      </.link>
    </:action>
  </.table>
<% else %>
  <p>No departments, yet.</p>
<% end %>

<.back navigate={~p"/clubs"}>Back to clubs</.back>

<.modal :if={@live_action == :edit} id="club-modal" show on_cancel={JS.patch(~p"/clubs/#{@club}")}>
  <.live_component
    module={SportywebWeb.ClubLive.FormComponent}
    id={@club.id}
    title={@page_title}
    action={@live_action}
    club={@club}
    navigate={~p"/clubs/#{@club}"}
  />
</.modal>
